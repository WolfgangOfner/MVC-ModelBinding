@model IList<ModelBinding.Models.AddressShort>
@{
    ViewBag.Title = "Address";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Addresses</h2>

<form>
    @if (!Model.Any())
    {
        using (Html.BeginForm())
        {
            for (var i = 0; i < 3; i++)
            {
                <fieldset>
                    <legend>Address @(i + 1)</legend>
                    <div class="form-group">
                        <label>City</label>
                        @Html.Editor("[" + i + "].City", new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="form-group">
                        <label>Country</label>
                        @Html.Editor("[" + i + "].Country", new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </fieldset>
            }

            <button class="btn btn-primary" type="submit">Submit</button>
        }
    }
    else
    {
        foreach (var address in Model)
        {
            <div class="form-group">
                <label class="form-control">@address.City, @address.Country</label>
            </div>
        }

        @Html.ActionLink("Back", "Address");
    }
</form>
