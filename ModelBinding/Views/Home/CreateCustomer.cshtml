@model ModelBinding.Models.Customer

@{
    ViewBag.Title = "CreateCustomer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Create Customer</h2>
<form>

    @using (Html.BeginForm("DisplayAddressShort", "Home"))
    {
        <div class="form-group">
            @Html.LabelFor(m => m.PersonId)@Html.EditorFor(m => m.PersonId, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.FirstName)@Html.EditorFor(m => m.FirstName, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.LastName)@Html.EditorFor(m => m.LastName, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Role)@Html.EditorFor(m => m.Role, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Address.City)
            @Html.EditorFor(m => m.Address.City, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Address.Country)
            @Html.EditorFor(m => m.Address.Country, new { htmlAttributes = new { @class = "form-control" } })
        </div>

        <button class="btn btn-primary" type="submit">Submit</button>
    }
</form>