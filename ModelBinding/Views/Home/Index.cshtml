@model ModelBinding.Models.Customer

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customer</h2>
<form>
    <div class="form-group">
        <label>ID</label>
        <label class="form-control">@Html.DisplayFor(m => m.PersonId)</label>
    </div>

    <div class="form-group">
        <label>First Name</label>
        <label class="form-control">@Html.DisplayFor(m => m.FirstName)</label>
    </div>

    <div class="form-group">
        <label>Last Name</label>
        <label class="form-control">@Html.DisplayFor(m => m.LastName)</label>
    </div>

    <div class="form-group">
        <label>Role</label>
        <label class="form-control">@Html.DisplayFor(m => m.Role)</label>
    </div>

    <div class="form-group">
        <label>City</label>
        <label class="form-control">@Html.DisplayFor(m => m.Address.City)</label>
    </div>

    <div class="form-group">
        <label>Country</label>
        <label class="form-control">@Html.DisplayFor(m => m.Address.Country)</label>
    </div>
</form>

